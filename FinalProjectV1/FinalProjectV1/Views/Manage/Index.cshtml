@model FinalProjectV1.Models.IndexViewModel
@{
    ViewBag.Title = "אזור אישי";
}

<h2>@ViewBag.Title</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>ברוך הבא @Model.Name</h4>
    <hr />
        <div class="tableContainer">
            <table class="table Personal data">
                <tbody>
                    <tr>
                        <td>שם:</td>
                        <td>@Model.Name</td>
                    </tr>
                    <tr>
                        <td>כתובת מגורים:</td>
                        <td>@Model.Address</td>
                    </tr>
                    <tr>
                        <td>כתובת מייל:</td>
                        <td>
                            <text>@Html.ActionLink(@Model.Email, "ChangeEmail")</text>
                        </td>
                    </tr>
                    <tr>
                        <td>מספר טלפון:</td>
                        <td>
                            <text>@Html.ActionLink(@Model.PhoneNumber, "AddPhoneNumber")</text>
                        </td>
                    </tr>
                    <tr>
                        <td>תעודת זהות:</td>
                        <td>@Model.IsraeliIdentify</td>
                    </tr>
                    <tr>
                        <td>סיסמה:</td>
                        <td>
                            @if (Model.HasPassword)
                            {
                               @Html.ActionLink("שינוי סיסמה", "ChangePassword")
                            }
                        </td>
                    </tr>
                    <tr>
                        <td></td>
                        <td></td>
                    </tr>
                    <tr>
                        <td></td>
                        <td></td>
                    </tr>
                </tbody>
            </table>
        </div>
    <h4>@Model.Name, הרכבים שבבעלותך:</h4>
    @if (Model.Cars != null)
    {
        <div class="tableContainer">
            <table class="table Personal data">
                <thead>
                    <tr>
                        <th align="right">סוג הרכב</th>
                        <th align="right">מספר הרכב</th>
                    </tr>
                </thead>
                @foreach (var item in Model.Cars)
                {
                    <tr>
                        <td>@item.Value</td>
                        <td>@Html.ActionLink(@item.Key, "History", "History", new { carNumber = @item.Key, isOwner = true }, null)</td>
                    </tr>
                }
            </table>
        </div>
    }
    @Html.ActionLink("הוסף רכב", "AddOwnCar", "Manage")
</div>
