@model FinalProjectV1.Models.Advertisement
@{
    ViewBag.Title = "יצירת מודעה";
}

<h2>@ViewBag.Title עבור רכב מספר @Model.CarNumber</h2>

@using (Html.BeginForm("AddAD", "History", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>הוסף מידע נוסף אודות רכבך:</h4>
    <hr />
    <div hidden class="form-group">
        @Html.LabelFor(m => m.CarNumber, new { @class = "col-md-2 control-label" })
    </div>
    <div hidden class="form-group">
        @Html.LabelFor(m => m.DatePublished, new { @class = "col-md-2 control-label" })
    </div>
    <div hidden class="form-group">
        @Html.LabelFor(m => m.Location, new { @class = "col-md-2 control-label" })
    </div>
    <div hidden class="form-group">
        @Html.LabelFor(m => m.SellerName, new { @class = "col-md-2 control-label" })
    </div>
    <div hidden class="form-group">
        @Html.LabelFor(m => m.Tel, new { @class = "col-md-2 control-label" })
    </div>
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Description, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
        </div>
    </div>
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Price, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Price, new { @class = "form-control" })
        </div>
    </div>

    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Pic, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Pic, new { @class = "form-control" })
        </div>
    </div>

    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div hidden class="form-group">
        @Html.HiddenFor(model => model.CarNumber)
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="צור מודעה" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
